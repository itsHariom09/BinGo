<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Bingo</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <section class="auth-section">
        <div class="auth-container">
            <h2>Login to Bingo</h2>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form action="/auth/login" method="POST">
                <div class="form-group">
                    <label for="role">I am a</label>
                    <select name="role" id="role" class="form-control" required>
                        <option value="society">Society Head</option>
                        <option value="member">Society Member</option>
                        <option value="collector">Garbage Collector</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
            <div class="auth-links">
                <p>Don't have an account? 
                    <a href="/auth/register-society" id="registerLink">Register as Society</a> or 
                    <a href="/auth/register-collector">Register as Collector</a>
                </p>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>

    <script>
        document.getElementById('role').addEventListener('change', function() {
            const role = this.value;
            const registerLink = document.getElementById('registerLink');
            
            if (role === 'collector') {
                registerLink.href = '/auth/register-collector';
                registerLink.textContent = 'Register as Collector';
            } else {
                registerLink.href = '/auth/register-society';
                registerLink.textContent = 'Register as Society';
            }
        });
    </script>
</body>
</html>