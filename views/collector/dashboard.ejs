<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collector Dashboard - Bingo</title>
    <link href="/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="collector-dashboard">
        <h1>Welcome, <%= user.name %></h1>
        <p class="collector-info">Service Area: <%= user.area %></p>
        
        <div class="requests-container">
            <h2>Your Assigned Collections</h2>
            
            <% if (pendingRequests.length === 0) { %>
                <div class="no-requests">
                    <i class="fas fa-trash-alt"></i>
                    <p>No pending collection requests</p>
                </div>
            <% } else { %>
                <div class="request-cards">
                    <% pendingRequests.forEach(request => { %>
                        <div class="request-card">
                            <div class="request-info">
                                <h3><i class="fas fa-home"></i> <%= request.houseNo %></h3>
                                <p><i class="fas fa-building"></i> <%= request.society.name %></p>
                                <p><i class="fas fa-clock"></i> <%= new Date(request.requestedAt).toLocaleString() %></p>
                            </div>
                            <form action="/collector/complete/<%= request._id %>" method="POST" class="request-actions">
                                <button type="submit" class="btn btn-complete">
                                    <i class="fas fa-check"></i> Mark Complete
                                </button>
                            </form>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
        
        <div class="stats-container">
            <div class="stat-card">
                <h3>Completed Today</h3>
                <p><%= completedToday %></p>
            </div>
            <div class="stat-card">
                <h3>Total Completed</h3>
                <p><%= totalCompleted %></p>
            </div>
        </div>
        <div class="stats-container">
    <div class="stat-card">
        <h3>Completed Today</h3>
        <p><%= typeof completedToday !== 'undefined' ? completedToday : 0 %></p>
    </div>
    <div class="stat-card">
        <h3>Total Completed</h3>
        <p><%= typeof totalCompleted !== 'undefined' ? totalCompleted : 0 %></p>
    </div>
</div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>